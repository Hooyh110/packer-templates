{
  "builders": [
    {
      "boot_command": [
        "<tab> text biosdevname=0 net.ifnames=0 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-8/ks-x86_64-ganeti.cfg<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "10s",
      "disk_size": 5120,
      "disk_interface": "virtio-scsi",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "aaf9d4b3071c16dbbda01dfe06085e5d0fdac76df323e3bbe87cce4318052247",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/8.3.2011/isos/x86_64/CentOS-8.3.2011-x86_64-dvd1.iso",
      "output_directory": "packer-centos-8-x86_64-ganeti",
      "qemuargs": [ [ "-m", "2048M" ] ],
      "qemu_binary": "qemu-kvm",
      "shutdown_command": "echo 'osuadmin'|sudo -S /sbin/halt -h -p",
      "ssh_password": "osuadmin",
      "ssh_port": 22,
      "ssh_username": "osuadmin",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-centos-8-x86_64-ganeti",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'centos' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/osuosl.sh",
        "scripts/centos/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/centos/network-manager-dhcp-fix.sh",
        "scripts/common/ganeti.sh",
        "scripts/centos/ganeti.sh",
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://centos.osuosl.org",
    "image_name": "CentOS 8.3"
  }
}
