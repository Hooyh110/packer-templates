        "text biosdevname=0 net.ifnames=0 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7/ks-aarch64.cfg<enter>",
        "initrd /images/pxeboot/initrd.img<enter>",
        "boot<enter><wait>"
