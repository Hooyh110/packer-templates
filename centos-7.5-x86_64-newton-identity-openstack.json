{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.5/ks-x86_64.cfg<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "10s",
      "disk_size": 20480,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "937bf0a7b0932817f84f7230f15ed88911bbbd85c0c958680792b7f8d8f9c1a9",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/7.5.1804/isos/x86_64/CentOS-7-x86_64-NetInstall-1804.iso",
      "output_directory": "packer-centos-7.5-x86_64-newton-identity-openstack",
      "qemuargs": [ [ "-m", "8192M" ] ],
      "qemu_binary": "qemu-kvm",
      "shutdown_command": "echo 'centos'|sudo -S /sbin/halt -h -p",
      "ssh_password": "centos",
      "ssh_port": 22,
      "ssh_username": "centos",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-centos-7.5-x86_64-newton-identity-openstack",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CHEF_VERSION={{user `chef_version`}}"
      ],
      "execute_command": "echo 'centos' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/centos/osuosl.sh",
        "scripts/centos/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/chef.sh",
        "scripts/centos/openstack.sh",
        "scripts/centos/chef-zero-bootstrap.sh"
      ]
    },
    {
      "type": "file",
      "source": "{{user `local_chef_dir`}}/centos-7.5-x86_64-newton-identity-openstack/cookbooks/",
      "destination": "{{user `chef_dir`}}/cookbooks"
    },
    {
      "type": "file",
      "source": "{{user `local_chef_dir`}}/roles/",
      "destination": "{{user `chef_dir`}}/roles"
    },
    {
      "type": "file",
      "source": "{{user `local_chef_dir`}}/centos-7.5-x86_64-newton-identity-openstack/data_bags/",
      "destination": "{{user `chef_dir`}}/data_bags"
    },
    {
      "type": "file",
      "source": "{{user `local_chef_dir`}}/centos-7.5-x86_64-newton-identity-openstack/encrypted_data_bag_secret",
      "destination": "/etc/chef/encrypted_data_bag_secret"
    },
    {
      "type": "chef-client",
      "server_url": "http://localhost:8889",
      "config_template"   : "{{user `local_chef_dir`}}/templates/client.rb.template",
      "skip_clean_node": true,
      "skip_clean_client": true,
      "skip_install": true,
      "run_list": [ "role[openstack_ops_identity]" ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'centos' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/centos/chef-zero-openstack-cleanup.sh",
        "scripts/centos/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }
  ],
  "variables": {
    "chef_version": "12.18.31",
    "local_chef_dir": "chef",
    "chef_dir": "/tmp/packer-chef-client",
    "node_name": "controller.example.com",
    "mirror": "http://centos.osuosl.org",
    "image_name": "openstack-newton-identity"
  }
}
