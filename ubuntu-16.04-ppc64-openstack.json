{
  "builders": [
    {
      "boot_command": [
        "<wait5>",
        "install-powerpc64",
        "<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": 4096,
      "headless": true,
      "vnc_bind_address": "0.0.0.0",
      "http_directory": "http",
      "iso_checksum": "ea6744626bc9ec4833e76b7855c6e31f",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `mirror`}}/releases/16.04/release/ubuntu-16.04.2-server-powerpc.iso",
      "output_directory": "packer-ubuntu-16.04-ppc64-openstack",
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "machine_type": "pseries",
      "ssh_password": "ubuntu",
      "ssh_port": 22,
      "ssh_username": "ubuntu",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-ubuntu-16.04-ppc64"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/update.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/ubuntu/openstack.sh",
        "scripts/ubuntu/networking.sh",
        "scripts/ubuntu/sudoers.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://cdimage.ubuntu.com",
    "image_name": "Ubuntu 16.04 BE"
  }
}

