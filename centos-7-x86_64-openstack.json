{
  "builders": [
    {
      "boot_command": [
        "<tab> text biosdevname=0 net.ifnames=0 ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7/ks-x86_64.cfg<enter><wait>"
      ],
      "accelerator": "kvm",
