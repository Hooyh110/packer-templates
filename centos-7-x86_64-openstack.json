      "qemu_binary": "qemu-kvm",
      "shutdown_command": "echo 'centos'|sudo -S /sbin/halt -h -p",
      "ssh_password": "centos",
      "ssh_port": 22,
      "ssh_username": "centos",
      "ssh_wait_timeout": "10000s",
